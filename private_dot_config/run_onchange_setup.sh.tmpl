#!/bin/bash

printf "\n##################################################\n"
printf "## Installing chezmoi and dotfiles"
printf "\n##################################################\n"
if command -v chezmoi &> /dev/null; then
  printf "Chezmoi is already installed.\n"
else
  sh -c "$(curl -fsLS get.chezmoi.io)" -- init --apply {{ .github_username }}
fi

printf "\n##################################################\n"
printf "## Installing fish shell"
printf "\n##################################################\n"
if command -v fish &> /dev/null; then
  printf "Fish is already installed.\n"
else
  {{ if eq .chezmoi.os "darwin" }}
  brew install fish
  {{ else if eq .chezmoi.os "linux" }}
  sudo apt-add-repository ppa:fish-shell/release-3
  sudo apt update
  sudo apt install fish
  {{ else }}
  printf "OS not supported: $(uname). Please install fish manually.\n"
  {{ end }}
fi

printf "\n##################################################\n"
printf "## Setting fish as default shell"
printf "\n##################################################\n"
{{ if eq .chezmoi.os "darwin" }}
if [ "$SHELL" == "/opt/homebrew/bin/fish" ]; then
  printf "Fish is already the default shell.\n"
else
  sudo chsh -s /opt/homebrew/bin/fish
fi
{{ else if eq .chezmoi.os "linux" }}
if [ "$SHELL" == "/usr/bin/fish" ]; then
  printf "Fish is already the default shell.\n"
else
  sudo chsh -s /usr/bin/fish
fi
{{ else }}
printf "OS not supported: $(uname). Please set fish as the default shell manually.\n"
{{ end }}

printf "\n##################################################\n"
printf "## Installing zoxide"
printf "\n##################################################\n"
if command -v zoxide &> /dev/null; then
  printf "Zoxide is already installed.\n"
else
  {{ if eq .chezmoi.os "darwin" }}
  brew install zoxide
  {{ else if eq .chezmoi.os "linux" }}
  curl -sS https://raw.githubusercontent.com/ajeetdsouza/zoxide/main/install.sh | bash
  {{ else }}
  printf "OS not supported: $(uname). Please install zoxide manually.\n"
  {{ end }}
fi

printf "\n##################################################\n"
printf "## Installing starship"
printf "\n##################################################\n"
if command -v starship &> /dev/null; then
  printf "Starship is already installed.\n"
else
  curl -sS https://starship.rs/install.sh | sh
fi

printf "\n##################################################\n"
printf "## Installing Tailscale"
printf "\n##################################################\n"
{{ if eq .chezmoi.os "darwin" }}
if command -v /Applications/Tailscale.app/Contents/MacOS/Tailscale &> /dev/null; then
  printf "Tailscale is already installed.\n"
else
  curl -fsSL https://tailscale.com/install.sh | sh
fi
{{ else if eq .chezmoi.os "linux" }}
if command -v /usr/bin/tailscale &> /dev/null; then
  printf "Tailscale is already installed.\n"
else
  curl -fsSL https://tailscale.com/install.sh | sh
fi
{{ else }}
printf "OS not supported: $(uname). Please install Tailscale manually.\n"
printf "curl -fsSL https://tailscale.com/install.sh | sh\n"
{{ end }}

printf "\n##################################################\n"
printf "## Installing lazydocker"
printf "\n##################################################\n"
{{ if eq .chezmoi.os "darwin" }}
if command -v lazydocker &> /dev/null; then
  printf "lazydocker is already installed.\n"
else
  brew install jesseduffield/lazydocker/lazydocker
fi
{{ else if eq .chezmoi.os "linux" }}
# Check if lazydocker is installed and executable. Has to be done differently because it was acting up.
if [ -x "$(command -v lazydocker)" ]; then
  printf "lazydocker is already installed.\n"
else
  sudo curl https://raw.githubusercontent.com/jesseduffield/lazydocker/master/scripts/install_update_linux.sh | bash
fi
{{ else }}
printf "OS not supported: $(uname). Please install lazydocker manually.\n"
printf "https://github.com/jesseduffield/lazydocker#installation\n"
{{ end }}

printf "\n##################################################\n"
printf "## Setup complete"
printf "\n##################################################\n"
printf "Please restart your terminal to apply changes.\n"
